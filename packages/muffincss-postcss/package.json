{
  "name": "@muffincss/postcss",
  "version": "0.0.0",
  "description": "PostCSS plugin for generating  atomic styles from regular css",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "@muffincss/postcss"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc  --noEmit",
    "build": "tsup",
    "gen:css": "tsup src/generate/css.ts --format cjs,esm --dts --external:./_generated --out-dir ./dist"
  },
  "author": "Ajith Kumar P M <ajithpmuralidharan01@gmail.com>",
  "license": "MIT",
  "repository": "ajth-in/muffincss/@muffincss-postcss",
  "engines": {
    "node": ">=18.0.0"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.mjs",
      "require": "./dist/tools/index.js"
    }
  },
  "peerDependencies": {
    "postcss": "^8.4.27"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/glob-parent": "^5.1.3",
    "@types/jest": "^29.5.14",
    "@types/murmurhash3js": "^3.0.7",
    "@types/node": "^22.15.3",
    "crypto": "^1.0.1",
    "cssnano": "^7.0.7",
    "eslint": "^8.47.0",
    "jest": "^29.7.0",
    "murmurhash3js": "^3.0.1",
    "postcss": "^8.4.27",
    "postcss-import": "^16.1.0",
    "prettier-plugin-embed": "^0.5.0",
    "ts-jest": "^29.3.2",
    "tsup": "^8.4.0",
    "typescript": "5.5.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "dependencies": {
    "@muffincss/core": "workspace:*",
    "@types/handlebars": "^4.1.0",
    "chalk": "^4.0.0",
    "esbuild": "^0.25.4",
    "fast-glob": "^3.3.3",
    "glob-parent": "^6.0.2",
    "handlebars": "^4.7.8",
    "lilconfig": "^3.1.3",
    "mustache": "^4.2.0",
    "ts-morph": "^25.0.1",
    "ts-node": "^10.9.2"
  }
}
