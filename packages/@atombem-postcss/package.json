{
  "name": "@anucss/postcss",
  "version": "0.0.0",
  "description": "PostCSS plugin for generating  atomic styles from regular css",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "@anucss/postcss"
  ],
  "scripts": {
    "test": "npm run unit && eslint .",
    "build": "tsup --watch"
  },
  "author": "Ajith Kumar P M <ajithpmuralidharan01@gmail.com>",
  "license": "MIT",
  "repository": "ajth-in/anucss/@anucss-postcss",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "peerDependencies": {
    "postcss": "^8.4.27"
  },
  "devDependencies": {
    "@types/glob-parent": "^5.1.3",
    "eslint": "^8.47.0",
    "postcss": "^8.4.27",
    "postcss-import": "^16.1.0",
    "tsup": "^8.4.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "glob-parent": "^6.0.2"
  }
}
